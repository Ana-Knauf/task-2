mixin radio-buttons(radioButtonsData)
    -
        let {blockName, title, modRadioImit, modBlock} = radioButtonsData;

        let pClass = `radio-buttons-title ${ (blockName) ? blockName + '__radio-buttons-title' : '' }`;
        let divClass = `radio-buttons ${ (blockName) ? blockName + '__radio-buttons' : '' }`;
        let alignClass = `radio-buttons-align-block ${ (blockName) ? blockName + '__radio-buttons-align-block' : '' }`;
        let radioClass = `radio-buttons-radio ${ (blockName) ? blockName + '__radio-buttons-radio' : '' }`;
        let radioImitClass = `radio-buttons-radio-imit ${ (blockName) ? blockName + '__radio-buttons-radio-imit' : '' }`;
        let labelClass = `radio-buttons-label ${ (blockName) ? blockName + '__radio-buttons-label' : '' }`;

        if (modRadioImit) { //- модификация radio-button-имитаторов
            const modifRadioImit = modRadioImit.split(/[,\s]\s*/);
            radioImitClass += " " + blockName + `__${modifRadioImit.join(` ${blockName}__`)}`;
        }

        if (modBlock) { //- moving the block of the element inside a parent block
            const modifBlock = modBlock.split(/[,\s]\s*/);
            divClass += " " + blockName + `__${modifBlock.join(` ${blockName}__`)}`;
        }

        let idDefinerMale;
        let idDefinerFemale;
        let nameDefiner;

    if (title)
        p(class = pClass)= title
    div(class = divClass)
        - idDefinerMale = blockName + "-male";
        - nameDefiner = blockName + "-gender";
        - idDefinerFemale = blockName + "-female";
        div(class = alignClass)
            input(type = "radio" class = radioClass id = idDefinerMale name = nameDefiner hidden)
            label(for = idDefinerMale class = radioImitClass)
            label(for = idDefinerMale class = labelClass) Мужчина
        div(class = alignClass)
            input(type = "radio" class = radioClass id = idDefinerFemale name = nameDefiner hidden)
            label(for = idDefinerFemale class = radioImitClass)
            label(for = idDefinerFemale class = labelClass) Женщина