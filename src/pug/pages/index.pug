doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Document
    body
        .container
            .container1
                - const textFieldData = { blockName: "container1", title: "Text field", iputType: "email", inputPlaceholder: "This is pretty awesome" }
                +text-field(textFieldData)

                p Можно курить

                .expand
                    - const expandCheckboxData = { blockName: "expand", title: "Дополнительные удобства", options: "Завтрак Письменный стол Стул для кормления Кроватка Телевизор Шампунь" }
                    +expand-checkbox(expandCheckboxData)

                .dropdown
                    - const dropdownGuestsData = { blockName: "dropdown" }
                    +dropdown-guests(dropdownGuestsData)

                .date-dropdown
                    - const dateDropdownData = { blockName: "date-dropdown", modSize: "input-box_width_md" }
                    +date-dropdown(dateDropdownData)

                    - const richCheckboxButtonsData = { blockName: "date-dropdown", title: "Rich checkbox buttons" }
                    +rich-checkbox-buttons(richCheckboxButtonsData)

            .container2
                - const radioButtonsData = { blockName: "container2", title: "Radio buttons" }
                +radio-buttons(radioButtonsData)

                .that-block
                    - const bulletListData = { blockName: "that-block", title: "Bullet list", points: "Нельзя с питомцами Без вечеринок и мероприятий Время прибытия — после 13:00, br а выезд до 12:00" }
                    +bullet-list(bulletListData)

                    - const checkboxButtonsData = { blockName: "that-block", title: "Checkbox buttons", options: "Можно курить Можно с питомцами Можно пригласить гостей br (до 10 человек)" }
                    +checkbox-buttons(checkboxButtonsData)

                .this-block
                    - const toggleData = { blockName: "this-block", title: "toggle", label: "Получать спецпредложения" }
                    +toggle(toggleData)


